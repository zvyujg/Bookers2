<div class="container">
    <div class= "row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h2>Editing Book</h2>
            <!--form_with部分-->
            <%=form_with model: @book,local:true  do |f| %>
            <div class="form-group">
                <label for="user_name">Title</label>
                <%= f.text_area :title, class:"form-control name"%>
            </div>
            <div class="form-group">
                <label label for="user_image">Opinion</label>
                <%= f.text_area :body, class: "form-control-file user_image", accept: 'image/*' %>
            </div>
            
            <div class= "form-group">
                <%= f.submit "Update Book",class: "btn btn-secondary"%>
            </div>
            <%= link_to "Show", book_path(@book) %>
            <%= link_to "Back",  books_path %>
            <% end %>
        </div>
    </div>
</div>