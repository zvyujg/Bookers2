<!DOCTYPE html>

<html>
  <head>
    <title>Bookers</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <header>
       <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
       <div class="container">
         <%= link_to "Bookers",root_path,class: 'navbar-brand'%>
         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
      <li>
        <%= link_to  user_path(current_user) do %>
        <div class= 'nav-link text-light'><i class="fas fa-home"></i>Home</div>
        <% end %>
      </li>
      <li>
        <%= link_to users_path do%>
        <div class='nav-link text-light'><i class="fas fa-users"></i>Users</div>
        <% end %>
      </li>
      <li>
        <%= link_to books_path do%>
        <div class='nav-link text-light'><i class="fas fa-book-open"></i>Books</div>
        <% end %>
      </li>
      <li>
        <%= link_to destroy_user_session_path do %>
        <div class= 'nav-link text-light'><i class="fas fa-sign-out-alt"></i>Log out</div>
      <% end %>
      </li>
    <% else %>
      <li>
        <%= link_to  root_path do %>
        <div class= 'nav-link text-light'><i class="fas fa-home"></i>Home</div>
        <% end %>
       </li>
      <li>
        <%= link_to about_path do %>
        <div class= 'nav-link text-light'><i class="fas fa-link"></i>About</div>
        <% end %>
      </li>
      <li>
        <%= link_to new_user_registration_path do %>
        <div class= 'nav-link text-light'><i class="fas fa-user-plus"></i>Sign up</div>
        <% end %>
      </li>
      <li>
        <%= link_to new_user_session_path do %>
        <div class= 'nav-link text-light'><i class="fas fa-sign-in-alt"></i>Log in</div>
        <% end %>
      </li>
    <% end %>  
        </ul>
      </div>
       </div>  
       </nav>
     </header>
     <main>
       <p id="notice"></p>
    <%= yield %>
    </main>
  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>  
        </div>
      </div>
    </div>
  </footer>
  </body>
</html>
