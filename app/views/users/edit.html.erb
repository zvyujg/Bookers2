<div class="container">
    <div class= "row">
        <% if @user.errors.any? %>
          <%= @user.errors.count %>error prohibited this obj from being saved:
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h2>User info</h2>
            <!--form_with部分-->
            <%=form_with model: @user,local:true  do |f| %>
            <div class="form-group">
                <label for="user_name">Name</label>
                <%= f.text_area :name, class:"form-control name"%>
            </div>
            <div class="form-group">
                <label for="user_image">Image</label>
                <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
            </div>
            <div class="form-group">
                <%= f.label :introduction %>
                <%= f.text_area :introduction, class: "form-control introduction" %>
            </div>
            <div class= "form-group">
                <%= f.submit "Update User",class: "btn btn-secondary"%>
            </div>
            <% end %>
        </div>
    </div>
</div>